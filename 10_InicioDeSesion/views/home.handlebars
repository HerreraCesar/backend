<div class="row">
  <div class="col-md-9">
    <div class="account">
      <h1>Bienvenido {{user}}</h1>
      <button class="btn btn-primary" id="logout">Desloguear</button>
    </div>
    <h3>Ingresar nuevo producto:</h3>
    <form id="newProduct" autocomplete="off">
      <div class="mb-9">
        <div class="little">
          <label class="form-label">Nombre:</label>
          <input type="text" id="title" name="title" required class="form-control" />
        </div>
      </div>
      <div class="mb-9">
        <div class="little">
          <label class="form-label">Precio:</label>
          <input type="number" id="price" name="price" required class="form-control" />
        </div>
      </div>
      <div class="mb-9">
        <label class="form-label">URL imagen:</label>
        <input type="url" id="thumbnail" name="thumbnail" required class="form-control" />
      </div>
      <input type="submit" class="btn btn-primary" value="Agregar"/>
    </form>
    <h3>Productos disponibles:</h3>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody id="products">
        </tbody>
    </table>
  </div>
  <div class="col-md-9 chat">
    <h3>Mi App Chat</h3>
    <h6 id="compression"></h4>
    <form id="newMessage" autocomplete="off">
      <div class="mb-9">
        <label class="form-label">Email:</label>
        <input
          type="email"
          id="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Nombre:</label>
        <input
          type="text"
          id="name"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Apellido:</label>
        <input
          type="text"
          id="lastname"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Alias:</label>
        <input
          type="text"
          id="alias"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Edad:</label>
        <input
          type="number"
          id="age"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Avatar:</label>
        <input
          type="text"
          id="avatar"
          class="form-control"
          required
        />
      </div>
      <div class="mb-9">
        <label class="form-label">Mensaje:</label>
        <input
          type="text"
          id="text"
          class="form-control"
          required
        />
      </div>
      <input type="submit" class="btn btn-primary" value="Enviar"/>
    </form>
    <div id="messages" class="mb-9"></div>
  </div>
</div>