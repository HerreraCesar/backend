<div class="row">
  <div class="col-md-9">
    <h3>Registro de usuario</h3>
    <form id="user" autocomplete="off" method="post">
      <label class="form-label">Ingrese su nombre:</label>
      <input
        type="text"
        id="username"
        name="username"
        required
        class="form-control"
      />
      <label class="form-label">Ingrese su contraseña:</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        class="form-control"
      />
      <input type="submit" class="btn btn-primary" value="Registrar" />
    </form>
    <button
      class="btn btn-primary"
      style="background-color: slategrey;"
      id="changeSection"
    >¿Ya tienes cuenta? Inicia sesión</button>
  </div>
</div>