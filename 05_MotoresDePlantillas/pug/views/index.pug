html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title='Pagina con Pug'
    body(class="container")
        br
        h1="Ingresar nuevo producto:"
        form(action="/productos" method="POST")
            div(class="mb-3")
                label(class="form-label")="Nombre:"
                input(type="text" name="title" required class="form-control")
            div(class="mb-3")
                label(class="form-label")="Precio:"
                input(type="number" name="price" required class="form-control")
            div(class="mb-3")
                label(class="form-label")="URL imagen:"
                input(type="url" name="thumbnail" required class="form-control")
            button(type="submit" class="btn btn-primary")="Agregar"
        br
        h2="Productos disponibles:"
        if (data.length !== 0)
            table(class="table")
                thead
                    tr
                        th(scope="col")="ID"
                        th(scope="col")="Nombre"
                        th(scope="col")="Precio"
                        th(scope="col")="Imagen"
                tbody
                    each producto in data
                        tr
                            td(scope="row")=producto.id
                            td=producto.title
                            td=producto.price
                            td: img(src=producto.thumbnail width="60")
        else
            h3="No hay productos"
